---
import Layout from '../layouts/Layout.astro';

const res = await fetch('http://172.30.1.95:3000/api/releases');
const releases: string[] = await res.json();
---

<html>
  <body class="p-8 bg-gray-100">
    <h1 class="text-3xl font-bold mb-6">Releases</h1>

    <div class="bg-white shadow rounded p-6">
      <ul class="space-y-3">
        {releases.map(file => (
          <li>
            <a 
              href={`http://172.30.1.95:3000/api/releases/download/${file}`}
              class="text-blue-600 hover:underline"
            >
              {file}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </body>
</html>
