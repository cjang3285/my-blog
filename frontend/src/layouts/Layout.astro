---
import '../styles/global.css'

interface Props {
	title?: string;
	description?: string;
}

const { title = '장찬욱', description = '개발자의 학습과 성장 기록' } = Astro.props;
---
<!doctype html>
<html lang="ko" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-warm-950 text-warm-200">
		<nav class="border-b border-warm-800/60">
			<div class="max-w-2xl mx-auto px-6 py-5 flex justify-between items-center">
				<a href="/" class="text-lg text-warm-100 font-semibold tracking-tight hover:text-accent transition-colors">
					장찬욱
				</a>
				<div class="flex gap-7 text-sm text-warm-400">
					<a href="/blog" class="hover:text-warm-100 transition-colors duration-300">글</a>
					<a href="/projects" class="hover:text-warm-100 transition-colors duration-300">프로젝트</a>
					<a href="/about" class="hover:text-warm-100 transition-colors duration-300">소개</a>
				</div>
			</div>
		</nav>

		<main class="max-w-2xl mx-auto px-6 py-16">
			<slot />
		</main>

		<footer class="border-t border-warm-800/40">
			<div class="max-w-2xl mx-auto px-6 py-10 text-center text-sm text-warm-600">
				<p>&copy; 2025 장찬욱</p>
			</div>
		</footer>
	</body>
</html>
