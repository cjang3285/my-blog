---
export const prerender = false;

import Layout from '../layouts/Layout.astro';

// SSR에서는 백엔드 URL 필요
const API_URL = import.meta.env.PUBLIC_API_URL || '';
const res = await fetch(`${API_URL}/api/status`);
const status = await res.json();
---

<Layout title="Status - 장찬욱" description="서버 상태">
  <h1 class="text-2xl font-semibold text-warm-100 mb-8 tracking-tight">Server Status</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="p-5 rounded-lg border border-warm-800/50 bg-warm-900/30">
      <h2 class="text-sm font-medium text-warm-500 uppercase tracking-wider mb-2">CPU</h2>
      <p class="text-warm-200">{status.cpu}</p>
    </div>

    <div class="p-5 rounded-lg border border-warm-800/50 bg-warm-900/30">
      <h2 class="text-sm font-medium text-warm-500 uppercase tracking-wider mb-2">Memory</h2>
      <p class="text-warm-200">{status.memory}</p>
    </div>

    <div class="p-5 rounded-lg border border-warm-800/50 bg-warm-900/30">
      <h2 class="text-sm font-medium text-warm-500 uppercase tracking-wider mb-2">Uptime</h2>
      <p class="text-warm-200">{status.uptime}</p>
    </div>
  </div>
</Layout>
