---
export const prerender = false;

import Layout from '../layouts/Layout.astro';

// SSR에서는 백엔드 URL 필요
const API_URL = import.meta.env.SSR
  ? 'http://localhost:3000'
  : (import.meta.env.PUBLIC_API_URL || '');

let status = null;
let statusError = null;
try {
  const res = await fetch(`${API_URL}/api/status`);
  if (res.ok) {
    status = await res.json();
  } else {
    statusError = `HTTP ${res.status}`;
    console.error(`[SSR:STATUS] Fetch failed: HTTP ${res.status} from ${API_URL}/api/status`);
  }
} catch (error) {
  statusError = error.message;
  console.error(`[SSR:STATUS] Fetch error: ${error.code || error.message} - ${API_URL}/api/status`);
}
---

<html>
  <body class="p-8 bg-gray-100">
    <h1 class="text-3xl font-bold mb-6">Server Status</h1>

    {status ? (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white shadow rounded p-6">
          <h2 class="text-xl font-semibold mb-2">CPU</h2>
          <p class="text-gray-700">{status.cpu}</p>
        </div>

        <div class="bg-white shadow rounded p-6">
          <h2 class="text-xl font-semibold mb-2">Memory</h2>
          <p class="text-gray-700">{status.memory}</p>
        </div>

        <div class="bg-white shadow rounded p-6">
          <h2 class="text-xl font-semibold mb-2">Uptime</h2>
          <p class="text-gray-700">{status.uptime}</p>
        </div>
      </div>
    ) : (
      <div class="bg-white shadow rounded p-6">
        <p class="text-red-600">상태 정보를 불러올 수 없습니다: {statusError}</p>
      </div>
    )}
  </body>
</html>
