---
export const prerender = false;

import Layout from '../layouts/Layout.astro';

const API_URL = import.meta.env.API_URL || '';
const res = await fetch(`${API_URL}/api/conferences`);
const conferences : { id: number; name: string; url: string }[] = await res.json();
---

<html>
  <body class="p-8 bg-gray-100">
    <h1 class="text-3xl font-bold mb-6">Conferences</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {conferences.map(c => (
        <div class="bg-white shadow rounded p-6">
          <h2 class="text-xl font-semibold mb-2">{c.name}</h2>
          <a 
            href={c.url} 
            class="text-blue-600 hover:underline"
          >
            Visit
          </a>
        </div>
      ))}
    </div>
  </body>
</html>
