---
interface Props {
	title: string;
	excerpt: string;
	date: string;
	slug: string;
	tags?: string[];
}

const { title, excerpt, date, slug, tags = [] } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('ko-KR', {
	year: 'numeric',
	month: 'long',
	day: 'numeric'
});
---
<article class="group p-6 rounded-xl border border-gray-200 dark:border-gray-800 hover:border-blue-500 dark:hover:border-blue-500 transition-colors">
	<a href={`/blog/${slug}`} class="block space-y-3">
		<div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
			<time datetime={date}>{formattedDate}</time>
			{tags.length > 0 && (
				<>
					<span>•</span>
					<div class="flex gap-2">
						{tags.map(tag => (
							<span class="text-blue-600 dark:text-blue-400">#{tag}</span>
						))}
					</div>
				</>
			)}
		</div>
		<h3 class="text-2xl font-semibold group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
			{title}
		</h3>
		<p class="text-gray-600 dark:text-gray-400 line-clamp-2">
			{excerpt}
		</p>
		<div class="text-blue-600 dark:text-blue-400 font-medium flex items-center gap-1">
			더 읽기
			<svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
			</svg>
		</div>
	</a>
</article>
