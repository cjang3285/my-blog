---
interface Props {
	title: string;
	excerpt: string;
	date: string;
	slug: string;
	tags?: string[];
}

const { title, excerpt, date, slug, tags = [] } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('ko-KR', {
	year: 'numeric',
	month: 'long',
	day: 'numeric'
});
---
<article class="group py-6 border-b border-warm-800/50 last:border-b-0">
	<a href={`/blog/${slug}`} class="block space-y-2">
		<div class="flex items-center gap-2 text-sm text-warm-500">
			<time datetime={date}>{formattedDate}</time>
			{tags.length > 0 && (
				<>
					<span class="text-warm-700">/</span>
					<div class="flex gap-1.5">
						{tags.map(tag => (
							<span class="text-warm-500">{tag}</span>
						))}
					</div>
				</>
			)}
		</div>
		<h3 class="text-lg font-medium text-warm-100 group-hover:text-accent transition-colors duration-300">
			{title}
		</h3>
		<p class="text-warm-400 text-sm leading-relaxed line-clamp-2">
			{excerpt}
		</p>
	</a>
</article>
