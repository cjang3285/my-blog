---
interface Props {
	title: string;
	description: string;
	detailLink: string;
	githubUrl?: string;
	tags?: string[];
}

const { title, description, detailLink, githubUrl, tags = [] } = Astro.props;
---
<div class="group p-5 rounded-lg border border-warm-800/50 hover:border-warm-700/80 transition-colors duration-300 bg-warm-900/30">
	<div class="space-y-3">
		<a href={detailLink}>
			<h3 class="font-medium text-warm-100 group-hover:text-accent transition-colors duration-300">
				{title}
			</h3>
		</a>
		<p class="text-warm-400 text-sm leading-relaxed">
			{description}
		</p>
		{tags.length > 0 && (
			<div class="flex flex-wrap gap-1.5">
				{tags.map(tag => (
					<span class="px-2 py-0.5 text-xs text-warm-500 bg-warm-800/60 rounded">
						{tag}
					</span>
				))}
			</div>
		)}
		{githubUrl && (
			<a
				href={githubUrl}
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center gap-1 text-sm text-warm-500 hover:text-accent transition-colors duration-300"
			>
				GitHub
				<svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
				</svg>
			</a>
		)}
	</div>
</div>
